.settings-head
	.settings-heading Настройки
	.settings-body
		form.settings-form
			.settings-block.setting-block_decorated
				.fileupload-wrap
					.settings-block__hint Исходное изображение
					input(type="file" placeholder="Изображение" name="base_image" rel="fileupload")
				.fileupload-wrap
					.settings-block__hint Водяной знак
					input(type="file" placeholder="Водяной знак" name="watermark_image" rel="fileupload")
			.settings-block.setting-block_decorated
				.settings-block__hint Положение
				.tab-container.no-jump
					ul.etabs
						li.tab
							a(href="#tabs1" class="tab-inner tab-inner_pos") Позиция
						li.tab
							a(href="#tabs2" class="tab-inner tab-inner_gut active") Пробел
					.tabs1.tabs-wrapper
						.canvas-preview
							span.gutter-preview-vertical
							span.gutter-preview-horizontal
						ul.parameters-list.right-float
							li.parameter
								.parametr-hint.parametr-hint_gutter-height
								.parament-input-wrap
									input(id="gutter-height" class="multiply input" value="0")
							li.parameter
								.parametr-hint.parametr-hint_gutter-width
								.parament-input-wrap
									input(id="gutter-width" class="multiply input" value="0")
					.tabs2.tabs-wrapper
						.canvas-preview
							#top-left.watermark-position.active-watermark-position
							each position in ['top-center','top-right','middle-left','middle-center','middle-right', 'bottom-left', 'bottom-center', 'bottom-right']
								.watermark-position(id = position)
						ul.parameters-list.right-float
							li.parameter
								.parametr-hint X
								.parament-input-wrap
									input(id="position-horizontal" class="position input" value="0")
							li.parameter
								.parametr-hint Y
								.parament-input-wrap
									input(id="position-vertical" class="position input" value="0")
			.settings-block.setting-block_decorated
				.settings-block__hint Прозрачность
				div#slider
			.settings-block.settings-block_buttons
				.button-group
					button(type="reset" class="grey-btn reset-btn") Сброс
					button(type="submit" class="pink-btn right-float") Скачать

		.preloader__blocker
